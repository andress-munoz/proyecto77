<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
  <!-- Content Header (Page header) -->
  <section class="content-header">
    <h1>
      Modificar productos
    </h1>
    <ol class="breadcrumb">
      <li><a href="#"><i class="fa fa-dashboard"></i> Home</a></li>
    </ol>
  </section>

  <!-- Main content -->
  <section class="content">

    <!-- Default box -->
    <div class="box">
      <div class="box-header with-border">
        <h3 class="box-title">Title</h3>

        <div class="box-tools pull-right">
          <button type="button" class="btn btn-box-tool" data-widget="collapse" data-toggle="tooltip" title="Collapse">
            <i class="fa fa-minus"></i></button>
          <button type="button" class="btn btn-box-tool" data-widget="remove" data-toggle="tooltip" title="Remove">
            <i class="fa fa-times"></i></button>
        </div>
      </div>
      <div class="box-body">
        <div class="box box-info">

          <!-- /.box-header -->
          <!-- form start -->
          <form class="form-horizontal" action="save-product" method="post">
            <div class="box-body">

              <div class="form-group">
                <label for="inputId" class="col-sm-2 control-label">Id</label>

                <div class="col-sm-10">
                  <input type="text" class="form-control" id="inputPassword3" placeholder="Id" name="id"
                    value="<%= productos[0].ID %>" readonly>
                </div>
              </div>

              <div class="form-group">
                <label for="inputDescripcion" class="col-sm-2 control-label">Producto</label>

                <div class="col-sm-10">
                  <input name="producto" type="text" class="form-control" id="inputProductol3" placeholder="Producto"
                    value="<%= productos[0].PRODUCTO %>">
                </div>
              </div>

              <div class="form-group">
                <label for="inputDescripcion" class="col-sm-2 control-label">imagen</label>

                <div class="col-sm-10">
                  <input name="imagen" type="text" class="form-control" id="inputImagenl3" placeholder="Imagen"
                    value="<%= productos[0].IMAGEN %>">
                </div>
              </div>

              <div class="form-group">
                <label for="inputDescripcion" class="col-sm-2 control-label">Descripcion</label>

                <div class="col-sm-10">
                  <input name="descripcion" type="text" class="form-control" id="inputEmail3" placeholder="Descripcion"
                    value="<%= productos[0].DESCRIPCION %>">
                </div>
              </div>
              <div class="form-group">
                <label for="inputPassword3" class="col-sm-2 control-label">Precio</label>

                <div class="col-sm-10">
                  <input name="precio" type="text" class="form-control" id="inputPassword3" placeholder="Precio"
                    value="<%= productos[0].PRECIO %>">
                </div>
              </div>
              <div class="form-group">
                <div class="col-sm-offset-2 col-sm-10">
                  <div class="checkbox">
                    <label>

                      <input name="estado" type="checkbox" 
                      <% if (productos[0].ESTADO != 0){ %>
                       checked
                      <% } %>
                      >Activo
                    </label>
                  </div>
                </div>
              </div>
            </div>
            <!-- /.box-body -->
            <div class="box-footer">
              <a href="products" class="btn btn-default">Cancelar</a>
              <button type="submit" class="btn btn-info pull-right">Guardar</button>
            </div>
            <!-- /.box-footer -->
          </form>
        </div>
      </div>
      <!-- /.box-body -->
      <!-- /.box-footer-->
    </div>
    <!-- /.box -->

  </section>
  <!-- /.content -->
</div>
<!-- /.content-wrapper -->