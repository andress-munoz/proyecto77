<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
  <!-- Content Header (Page header) -->
  <section class="content-header">
    <h1>
      Productos
    </h1>
    <ol class="breadcrumb">
      <li><a href="#"><i class="fa fa-dashboard"></i> Home</a></li>
    </ol>
  </section>

  <!-- Main content -->
  <section class="content">
    <% if (mTipo == "Guardar"){  %>

    <div class="callout callout-info">
      <h4>Eontech</h4>
      Producto agregado exitosamente
      <a href="http://getbootstrap.com/javascript/#modals">Bootstrap documentation</a>
    </div>

    <% } %>

    <!-- Default box -->
    <div class="box">
      <div class="box-header with-border">
        <button type="button" class="btn btn-success" data-toggle="modal" data-target="#modal-success">
          Agregar
        </button>

        <div class="box-tools pull-right">
          <button type="button" class="btn btn-box-tool" data-widget="collapse" data-toggle="tooltip" title="Collapse">
            <i class="fa fa-minus"></i></button>
          <button type="button" class="btn btn-box-tool" data-widget="remove" data-toggle="tooltip" title="Remove">
            <i class="fa fa-times"></i></button>
        </div>
      </div>
      <div class="box-body">
        <div class="box">

          <!-- /.box-header -->
          <div class="box-body">
            <div id="example2_wrapper" class="dataTables_wrapper form-inline dt-bootstrap">
              <div class="row">
                <div class="col-sm-6"></div>
                <div class="col-sm-6"></div>
              </div>
              <div class="row">
                <div class="col-sm-12">
                  <table id="example2" class="table table-bordered table-hover dataTable" role="grid"
                    aria-describedby="example2_info">
                    <thead>
                      <tr role="row">
                        <th class="sorting_asc" tabindex="0" aria-controls="example2" rowspan="1" colspan="1"
                          aria-sort="ascending" aria-label="Rendering engine: activate to sort column descending" style="background-color: rgba(1, 86, 142, 0.192); text-align: center;">ID
                        </th>
                        <th style="background-color: rgba(1, 86, 142, 0.192);" class="sorting" tabindex="0" aria-controls="example2" rowspan="1" colspan="1"
                          aria-label="Browser: activate to sort column ascending">PRODUCTO</th>
                        <th style="background-color: rgba(1, 86, 142, 0.192);" class="sorting" tabindex="0" aria-controls="example2" rowspan="1" colspan="1"
                          aria-label="Browser: activate to sort column ascending">IMAGEN</th>
                        <th style="background-color: rgba(1, 86, 142, 0.192);" class="sorting" tabindex="0" aria-controls="example2" rowspan="1" colspan="1"
                          aria-label="Platform(s): activate to sort column ascending">DESCRIPCION</th>
                        <th style="background-color: rgba(1, 86, 142, 0.192);" class="sorting" tabindex="0" aria-controls="example2" rowspan="1" colspan="1"
                          aria-label="Engine version: activate to sort column ascending">PRECIO</th>
                        <th style="background-color: rgba(1, 86, 142, 0.192);" class="sorting" tabindex="0" aria-controls="example2" rowspan="1" colspan="1"
                          aria-label="CSS grade: activate to sort column ascending">ESTADO</th>
                        <th style="background-color: rgba(1, 86, 142, 0.192);" class="sorting" tabindex="0" aria-controls="example2" rowspan="1" colspan="1"
                          aria-label="CSS grade: activate to sort column ascending">ACCIONES</th>
                      </tr>
                    </thead>
                    <tbody>
                      <% productos.forEach((elements)=>{ %>
                        <tr role="row" class="odd">
                          <td class="sorting_1" style="word-wrap: break-word; max-width: 20px; text-align: center; font-weight: 700; background-color: rgba(1, 86, 142, 0.192);">
                            <%= elements.ID%>
                          </td>
                          <td class="sorting_1" style="word-wrap: break-word; max-width: 20px; text-align: center; font-weight: 600;">
                            <%= elements.PRODUCTO%>
                          </td>
                          <td style="word-wrap: break-word; max-width: 20px;">
                            <%= elements.IMAGEN%>
                          </td>
                          <td style="word-wrap: break-word; width: 700px; overflow-y: auto; font-size: 10px; max-height: 200px;">
                            <%= elements.DESCRIPCION%>
                          </td>
                          <td style="word-wrap: break-word; width: 100px;">
                            <%= elements.PRECIO%>
                          </td>
                          <td style="width: 50px; ">
                            <%= elements.ESTADO%>
                          </td>
                          <td style="width: 100px; "><a href="edit-product?id=<%= elements.ID%>&producto=<%= elements.PRODUCTO%>&imagen=<%= elements.IMAGEN%>&descripcion=<%= elements.DESCRIPCION%>&precio=<%= elements.PRECIO%>" type="button" class="btn btn-warning btn-flat"><i
                                class="fa fa-edit"></i></a>
                                
                                <a href="delete-product?id=<%= elements.ID%>" type="button" class="btn btn-danger btn-flat"><i
                                  class="fa fa-trash"></i></a></td>
                        </tr>
                        <% }) %>
                    </tbody>
                    <tfoot>
                      <tr>
                      </tr>
                    </tfoot>
                  </table>
                </div>
              </div>
              <div class="row">
                <div class="col-sm-5">

                </div>
                <div class="col-sm-7">
                  <div class="dataTables_paginate paging_simple_numbers" id="example2_paginate">


                  </div>
                </div>
              </div>
            </div>
          </div>
          <!-- /.box-body -->
        </div>
      </div>
      <!-- /.box-body -->
      <!-- /.box-footer-->
    </div>
    <!-- /.box -->

  </section>
  <!-- /.content -->
</div>
<div class="modal modal-success fade" id="modal-success">
  <form action="save-product" method="post">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span></button>
        <h4 class="modal-title">Agregar Producto</h4>
      </div>
      <div class="modal-body">

        <div class="form-group">
          <label>Producto</label>
          <input name="producto" type="text" class="form-control" placeholder="Nombre Producto">
        </div>

        <div class="form-group">
          <label>Imagen</label>
          <input name="imagen" type="text" class="form-control" placeholder="Imagen Producto">
        </div>

        <div class="form-group">
          <label>Descripcion</label>
          <input name="descripcion" type="text" class="form-control" placeholder="Descripcion Producto">
        </div>

        <label>Precio</label>
        <div class="input-group">
          <span class="input-group-addon"><i class="fa fa-dollar"></i></span>
          <input name="precio" type="number" class="form-control" placeholder="Precio Producto">
        </div>

        <div class="form-group">
          <br>
          <label>Estado</label>
          <div class="radio">
            <label>
              <input type="radio" name="estado"  value="1" checked="">
              Activo
            </label>
          </div>
          <div class="radio">
            <label>
              <input type="radio" name="estado" value="0">
              Inactivo
            </label>
          </div>
        </div>

      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-outline pull-left" data-dismiss="modal">Cerrar</button>
        <button type="submit" class="btn btn-outline">Guardar</button>

      </div>



    </div>
    <!-- /.modal-content -->
  </div>
</form>
  <!-- /.modal-dialog -->
</div>
<!-- /.content-wrapper -->

